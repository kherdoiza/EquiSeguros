@model EquiSeguros.Models.BussinesEntity.Direccion
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DireccionForm</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Styles.css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>Cotizacion</h4></div>
        <div class="panel-body">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()
        <div class="form-group">
            <label>IdPersona:</label>
            @Html.TextBoxFor(x => x.IdPersona, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Pais:</label>
            @Html.DropDownListFor(x => x.Pais, new SelectList(ViewBag.Paises,"CodPais","TxtDescripcion"), "Escoja una Opción", new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Provincias:</label>
            @Html.DropDownListFor(x => x.Provincia, new SelectList(ViewBag.Provincias, "CodProvincia", "TxtDescripcion"), "Escoja una Opción", new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Tipo Direccion:</label>
            @Html.DropDownListFor(x => x.TipoDireccion, new SelectList(ViewBag.TipoDireccion, "CodTipoDireccion", "TxtDescripcion"), "Escoja una Opción", new { @class = "form-control" })
        </div>
            <div class="form-group">
                <label>Calle Principal:</label>
                @Html.TextBoxFor(x => x.CallePrincipal, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Calle Secundaria:</label>
                @Html.TextBoxFor(x => x.Callesecundaria, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Referencia:</label>
                @Html.TextBoxFor(x => x.Referencia, new { @class = "form-control" })
            </div>
            <div>
                <button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="submit"><strong>Guardar</strong></button>
            </div>
    }
        </div>
    </div>
</body>
</html>
